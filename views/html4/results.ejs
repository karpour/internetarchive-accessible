<html>
<head>
    <title>Internet Archive</title>
</head>

<body TOPMARGIN="0" LEFTMARGIN="0" RIGHTMARGIN="0" BOTTOMMARGIN="0" link="#999999" bgcolor="#f5f5f7" vlink="#999999">
    <font face="Arial">
        <table BORDER="0" CELLSPACING=0 CELLPADDING=6 width="100%" height="24">
            <%- include('partials/header') %>
            <tr>
                <td colspan="2">
                    <form action="/search" method="get">
                        Search:
                        <input type="text" placeholder="Search" name="query">
                        <button type="submit">Go</button>
                    </form>
                </td>
            </tr>
        </table>
        <table BORDER="0" CELLSPACING=10 CELLPADDING=10 width="100%">
            <tr>
                <td>
                    <% if (locals.results) { %>
                    <p>Found <%= numFound %> results</p>
                    <ul>
                        <% results.forEach(result => { %>
                        <li><a href="details/<%= result.identifier %>">
                                <%= result.title %>
                            </a></li>
                        <% }) %>
                    </ul>

                    <% if (results.page) { %>
                    <center>
                        <% if (results.page> 1) { %>
                        <a href="/search?query=<%= encodeURIComponent(query) %>&page=<%= (page-1) %>">Prev page</a> |
                        <% } %>
                        <a href="/search?query=<%= encodeURIComponent(query) %>&page=<%= (page-1) %>">Next page</a>
                    </center>
                    <% } %>
                    <% } %>
                </td>
            </tr>
        </table>
        <%- include('partials/footer') %>
    </font>
</body>
</html>