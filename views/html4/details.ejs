<html>
<head>
    <title><%= title %>: Internet Archive</title>
</head>

<body TOPMARGIN="0" LEFTMARGIN="0" RIGHTMARGIN="0" BOTTOMMARGIN="0" link="#999999" bgcolor="#f5f5f7" vlink="#999999">
    <font face="Arial">
        <table BORDER="0" CELLSPACING=0 CELLPADDING=6 width="100%" height="24">
            <%- include('partials/header') %>
            <tr BGCOLOR="#000000">
                <td align="center" colspan="2">
                    <img src="https://archive.org/services/img/<%= identifier %>" alt="Item image" />
                </td>
            </tr>
        </table>

        <table BORDER="0" CELLSPACING=10 CELLPADDING=10 width="100%">
            <tr>
                <td>
                    <font size=6><%= title %></font><br>
                    <% if (creator) { %>
                    by <a href="/search?query=<%= encodeURIComponent(`creator:"${creator}"`) %>"><%= creator %></a><br><br>
                    <% } %>

                    <% if (pubDate) { %>
                    Publication date: <%= pubDate %><br>
                    <% } %>
                    <% if (topics.length>0) { %>
                    Topics: <%- topics.map(topic => `<a href=\"/search?query=${encodeURIComponent(`subject:"${topic}"`)}\">${topic}</a>`).join(", ") %><br>
                    <% } %>
                    Item Size: <%= itemSize %><br><br>
                    <p>
                        <%- description %>
                    </p>

                    <% if(collections.length > 0) { %>
                    <h2>In collections</h2>
                    <ul>
                        <% collections.forEach(collection => { %>
                        <li><a href="/details/<%= collection.name %>"><%= collection.identifier %></a></li>
                        <% }) %><br>
                    </ul>
                    <% } %>
                    Uploaded by <a href=""><%= uploader %></a> on <%= uploadDate %>
                </td>
                <td bgcolor="#CCCCC" valign="top" width="200">
                    <b>0 Views</b><br>
                    <hr>

                    <b>DOWNLOAD OPTIONS</b><br>

                    <a href="http://archive.org/compress/<%= identifier %>">Download all files</a><br>
                    <a href="/download/<%= identifier %>">Show files</a>
                </td>
            </tr>
        </table>
        <%- include('partials/footer') %>
    </font>
</body>
</html>