<html>
<head>
    <title>Internet Archive</title>
</head>

<body TOPMARGIN="0" LEFTMARGIN="0" RIGHTMARGIN="0" BOTTOMMARGIN="0" link="#999999" bgcolor="#f5f5f7" vlink="#999999">
    <font face="Arial">
        <table BGCOLOR="#222222" BORDER=0 CELLSPACING=0 CELLPADDING=6 width="100%" height="24">
            <%- include('partials/header') %>
            <%- include('partials/nav') %>
            <tr>
                <td colspan="2" bgcolor="#FFFFFF">
                    <form action="/search" method="get">
                        <input type="text" placeholder="Search" name="query" />
                        <input type="submit" />
                    </form>
                </td>
            </tr>
        </table>
        &nbsp;<br>

        <% if (locals.results) { %>
        <p>Found <%= numFound %> results</p>
        <ul>
            <% results.forEach(result => { %>
            <li><a href="details/<%= result.identifier %>">
                    <%= result.title %>
                </a></li>
            <% }) %>
        </ul>

        <% if (results.page) { %>
        <center>
            <% if (results.page> 1) { %>
            <a href="/search?query=<%= encodeURIComponent(query) %>&page=<%= (page-1) %>">Prev page</a> |
            <% } %>
            <a href="/search?query=<%= encodeURIComponent(query) %>&page=<%= (page-1) %>">Next page</a>
        </center>
        <% } %>
        <% } %>

        <%- include('partials/footer') %>
    </font>
</body>
</html>